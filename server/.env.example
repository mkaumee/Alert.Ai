# AlertAI Server Environment Configuration

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SERVER_HOST=0.0.0.0
SERVER_PORT=5000

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Database Configuration
DATABASE_PATH=db/database.db

# Emergency Settings
PROXIMITY_THRESHOLD_METERS=100
EMERGENCY_ALERT_TIMEOUT_HOURS=2

# Firebase Cloud Messaging (FCM)
FCM_SERVER_KEY=your_fcm_server_key_here

# Twilio WhatsApp Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Emergency WhatsApp Contacts (use whatsapp:+1234567890 format)
EMERGENCY_CONTACT_1=whatsapp:+1234567890
EMERGENCY_CONTACT_2=whatsapp:+0987654321
EMERGENCY_CONTACT_3=

# Traditional Emergency Contacts
EMERGENCY_CONTACTS_FIRE=911
EMERGENCY_CONTACTS_MEDICAL=911
EMERGENCY_CONTACTS_SECURITY=+234-800-SECURITY